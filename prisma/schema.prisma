generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Voter {
  vid       String   @id @default(cuid())
  name      String
  email     String
  password  String
  rollno    String   @default("22999")
  society   String
  por       String
  attended  Boolean
  voted     Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Candidate {
  cid       String   @id @default(cuid())
  name      String
  email     String
  rollno    String
  position  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Votes {
  vid       String
  cid       String
  position  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([vid, cid])
}

model Admin {
  aid       String   @id @default(cuid())
  name      String
  email     String
  password  String
  position  String
  currentToken String @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}